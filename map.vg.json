{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Number of Workplace Deaths Per Government Area",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/ltan0120/Final-3179/main/map.topojson",
    "format": {"type": "topojson", "feature": "LGA_POLYGON"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/ltan0120/Final-3179/main/data.csv"
        },
        "key": "Local Government Area",
        "fields": ["Total Number of Deaths"]
      }
    },
    {
      "calculate": "(datum['Total Number of Deaths'] - 0) / (20 - 0)",
      "as": "Normalised Deaths"
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Normalised Deaths",
      "type": "quantitative",
      "scale": {"scheme": "reds"} 
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Local Government Area"},
      {"field": "Total Number of Deaths", "type": "quantitative"},
      {"field": "Normalised Deaths", "type": "quantitative", "format": ".2f"}
    ]
  }
}
